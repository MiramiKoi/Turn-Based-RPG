.loot-inventory {
    overflow: hidden;
    position: absolute;
    right: 0;
    translate: -450px 500px;
    max-height: 330px;
    max-width: 230px;
    margin-right: 0;
    flex-grow: 1;
}

.player-inventory {
    position: absolute;
    overflow: hidden;
    right: 0;
    max-width: 430px;
    max-height: 330px;
    margin-right: 20px;
    translate: 0 500px;
}
